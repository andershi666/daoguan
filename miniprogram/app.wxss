/**app.wxss - Duolingo-Inspired Design**/

/* ========================================
   Design Tokens - Friendly & Playful Style
   ======================================== */
page {
  /* Primary Colors - Bright & Cheerful */
  --color-primary: #FF9500;
  --color-primary-dark: #E67E00;
  --color-primary-light: #FFB84D;
  --color-accent: #FFD93D;
  --color-accent-light: #FFE588;

  /* Secondary Colors - Playful Palette */
  --color-secondary: #6BCF7E;
  --color-secondary-light: #A3E4B0;
  --color-info: #58C5F0;
  --color-purple: #CE82FF;
  --color-pink: #FF8BA7;

  /* Neutral Colors */
  --color-text-primary: #3C3C3C;
  --color-text-secondary: #777777;
  --color-text-tertiary: #AFAFAF;
  --color-text-light: #DADADA;

  /* Background Colors */
  --color-bg-primary: #FFFFFF;
  --color-bg-secondary: #F7F7F7;
  --color-bg-warm: #FFF9F0;
  --color-bg-accent: #FFF5E6;
  --color-bg-success: #E8F8EC;
  --color-bg-info: #E6F7FC;

  /* Semantic Colors */
  --color-success: #58CC02;
  --color-warning: #FF9600;
  --color-error: #FF4B4B;

  /* Shadows - Soft & Friendly */
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  --shadow-md: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
  --shadow-lg: 0 8rpx 20rpx rgba(0, 0, 0, 0.16);
  --shadow-xl: 0 12rpx 28rpx rgba(0, 0, 0, 0.2);

  /* Border Radius - Very Round! */
  --radius-sm: 12rpx;
  --radius-md: 16rpx;
  --radius-lg: 20rpx;
  --radius-xl: 28rpx;
  --radius-full: 9999rpx;

  /* Spacing */
  --space-xs: 8rpx;
  --space-sm: 12rpx;
  --space-md: 16rpx;
  --space-lg: 24rpx;
  --space-xl: 32rpx;
  --space-2xl: 48rpx;

  /* Typography - Bold & Friendly */
  --font-xs: 22rpx;
  --font-sm: 26rpx;
  --font-md: 30rpx;
  --font-lg: 34rpx;
  --font-xl: 40rpx;
  --font-2xl: 48rpx;
  --font-3xl: 56rpx;

  /* Transitions - Bouncy! */
  --transition-fast: 150ms cubic-bezier(0.34, 1.56, 0.64, 1);
  --transition-base: 250ms cubic-bezier(0.34, 1.56, 0.64, 1);
  --transition-slow: 350ms cubic-bezier(0.34, 1.56, 0.64, 1);

  background-color: var(--color-bg-warm);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB',
               'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: var(--font-md);
  color: var(--color-text-primary);
  line-height: 1.5;
  -webkit-font-smoothing: antialiased;
}

/* ========================================
   Base Layout
   ======================================== */
.container {
  padding: var(--space-lg);
  min-height: 100vh;
}

/* ========================================
   Button Styles - Playful & Bold
   ======================================== */
.btn-primary {
  background: var(--color-primary);
  color: white;
  border-radius: var(--radius-full);
  padding: 28rpx var(--space-xl);
  font-size: var(--font-lg);
  font-weight: 700;
  text-align: center;
  border: none;
  border-bottom: 6rpx solid var(--color-primary-dark);
  box-shadow: var(--shadow-md);
  transition: all var(--transition-base);
  letter-spacing: 0.5rpx;
}

.btn-primary:active {
  transform: translateY(4rpx);
  border-bottom-width: 2rpx;
  box-shadow: var(--shadow-sm);
}

.btn-secondary {
  background: white;
  color: var(--color-primary);
  border: 4rpx solid var(--color-primary);
  border-radius: var(--radius-full);
  padding: 24rpx var(--space-xl);
  font-size: var(--font-lg);
  font-weight: 700;
  transition: all var(--transition-base);
}

.btn-secondary:active {
  transform: scale(0.95);
  background: var(--color-bg-accent);
}

.btn-success {
  background: var(--color-success);
  color: white;
  border-radius: var(--radius-full);
  padding: 28rpx var(--space-xl);
  font-size: var(--font-lg);
  font-weight: 700;
  border-bottom: 6rpx solid #41A001;
  box-shadow: var(--shadow-md);
}

.btn-success:active {
  transform: translateY(4rpx);
  border-bottom-width: 2rpx;
}

/* ========================================
   Card Styles - Rounded & Elevated
   ======================================== */
.card {
  background: white;
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-md);
  padding: var(--space-lg);
  margin-bottom: var(--space-lg);
  border: 3rpx solid rgba(0, 0, 0, 0.05);
  transition: all var(--transition-base);
}

.card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-sm);
}

/* ========================================
   Form Elements - Friendly Input
   ======================================== */
.input-item {
  margin-bottom: var(--space-xl);
}

.input-label {
  display: block;
  font-size: var(--font-md);
  color: var(--color-text-primary);
  font-weight: 700;
  margin-bottom: var(--space-sm);
  letter-spacing: 0.3rpx;
}

.input-field {
  width: 100%;
  height: 96rpx;
  padding: 0 var(--space-lg);
  border: 4rpx solid #E5E5E5;
  border-radius: var(--radius-lg);
  font-size: var(--font-md);
  background: white;
  color: var(--color-text-primary);
  box-sizing: border-box;
  transition: all var(--transition-base);
  font-weight: 500;
}

.input-field:focus {
  border-color: var(--color-primary);
  background: white;
  box-shadow: 0 0 0 6rpx rgba(255, 149, 0, 0.15);
}

.textarea-field {
  width: 100%;
  min-height: 180rpx;
  padding: var(--space-md) var(--space-lg);
  border: 4rpx solid #E5E5E5;
  border-radius: var(--radius-lg);
  font-size: var(--font-md);
  background: white;
  color: var(--color-text-primary);
  box-sizing: border-box;
  transition: all var(--transition-base);
  line-height: 1.6;
}

.textarea-field:focus {
  border-color: var(--color-primary);
  box-shadow: 0 0 0 6rpx rgba(255, 149, 0, 0.15);
}

/* ========================================
   Badges & Tags - Colorful Pills
   ======================================== */
.badge {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 20rpx;
  font-size: var(--font-sm);
  font-weight: 700;
  border-radius: var(--radius-full);
  letter-spacing: 0.3rpx;
}

.badge-primary {
  background: var(--color-bg-accent);
  color: var(--color-primary);
  border: 2rpx solid var(--color-primary);
}

.badge-success {
  background: var(--color-bg-success);
  color: var(--color-success);
  border: 2rpx solid var(--color-success);
}

.badge-warning {
  background: #FFF4E6;
  color: var(--color-warning);
  border: 2rpx solid var(--color-warning);
}

.badge-error {
  background: #FFE8E8;
  color: var(--color-error);
  border: 2rpx solid var(--color-error);
}

/* ========================================
   Status & Feedback - Encouraging!
   ======================================== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--space-2xl) var(--space-lg);
  text-align: center;
}

.empty-state-icon {
  font-size: 140rpx;
  margin-bottom: var(--space-lg);
}

.empty-state-text {
  font-size: var(--font-lg);
  color: var(--color-text-secondary);
  font-weight: 600;
  line-height: 1.5;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--space-2xl) var(--space-lg);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #F0F0F0;
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: var(--space-lg);
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* ========================================
   Utility Classes
   ======================================== */
.text-center {
  text-align: center;
}

.text-bold {
  font-weight: 700;
}

.divider {
  height: 2rpx;
  background: #E5E5E5;
  margin: var(--space-lg) 0;
}

/* ========================================
   Progress & Streaks
   ======================================== */
.progress-bar {
  width: 100%;
  height: 16rpx;
  background: #E5E5E5;
  border-radius: var(--radius-full);
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--color-success) 0%, var(--color-secondary) 100%);
  border-radius: var(--radius-full);
  transition: width 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
}

/* pages/index/index.wxss - Duolingo Style */
.container {
  padding: 0;
  min-height: 100vh;
  padding-bottom: 140rpx;
  background: linear-gradient(180deg, #FFF9F0 0%, #FFFFFF 100%);
}

/* Â§¥ÈÉ®Ê®™ÂπÖ - Bright & Cheerful */
.header-banner {
  background: linear-gradient(135deg, #FF9500 0%, #FFB84D 100%);
  padding: 60rpx 32rpx 48rpx;
  text-align: center;
  color: white;
  position: relative;
  overflow: hidden;
}

.header-banner::before {
  content: '‚ú®';
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  font-size: 60rpx;
  opacity: 0.3;
  animation: twinkle 2s ease-in-out infinite;
}

@keyframes twinkle {
  0%, 100% { opacity: 0.3; transform: scale(1) rotate(0deg); }
  50% { opacity: 0.7; transform: scale(1.1) rotate(15deg); }
}

.banner-title {
  display: block;
  font-size: 48rpx;
  font-weight: 800;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
  position: relative;
  z-index: 1;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.15);
}

.banner-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.95;
  letter-spacing: 0.5rpx;
  position: relative;
  z-index: 1;
  font-weight: 600;
}

/* ÂàÜÁ±ªÊ†áÁ≠æ - Pill-shaped Tabs */
.category-scroll {
  white-space: nowrap;
  background: white;
  padding: 20rpx 0 24rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.category-tabs {
  display: inline-flex;
  padding: 0 24rpx;
  gap: 16rpx;
}

.category-tab {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 28rpx;
  border-radius: 24rpx;
  transition: all 0.25s cubic-bezier(0.34, 1.56, 0.64, 1);
  background: #F7F7F7;
  border: 3rpx solid transparent;
}

.category-tab.active {
  background: #FFE588;
  border-color: #FFD93D;
  transform: scale(1.08);
  box-shadow: 0 4rpx 12rpx rgba(255, 217, 61, 0.4);
}

.category-icon {
  font-size: 44rpx;
  margin-bottom: 8rpx;
  transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.category-tab.active .category-icon {
  transform: scale(1.15);
}

.category-name {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  white-space: nowrap;
  font-weight: 700;
  letter-spacing: 0.3rpx;
}

.category-tab.active .category-name {
  color: #E67E00;
}

/* ÊúçÂä°ÂàóË°® - Card Grid */
.services-list {
  padding: 24rpx 20rpx;
}

.service-card {
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
  padding: 24rpx;
  border: 3rpx solid #F0F0F0;
  transition: all 0.25s cubic-bezier(0.34, 1.56, 0.64, 1);
  position: relative;
}

.service-card:active {
  transform: scale(0.97);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.service-image {
  width: 100%;
  height: 280rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #F5F5F5 0%, #E8E8E8 100%);
  margin-bottom: 20rpx;
  object-fit: cover;
  border: 3rpx solid #F0F0F0;
}

.service-info {
  width: 100%;
}

.service-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
  gap: 12rpx;
}

.service-name {
  font-size: 32rpx;
  font-weight: 800;
  color: var(--color-text-primary);
  letter-spacing: 0.3rpx;
  line-height: 1.3;
  flex: 1;
}

.service-category {
  font-size: 20rpx;
  color: #FF9500;
  background: #FFF5E6;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  border: 2rpx solid #FF9500;
  font-weight: 700;
  flex-shrink: 0;
}

.service-desc {
  display: block;
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-bottom: 16rpx;
  line-height: 1.5;
  font-weight: 500;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.service-price {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #FFF9F0;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  margin-top: 16rpx;
  border: 2rpx solid #FFE588;
}

.price-label {
  display: none;
}

.price-value {
  font-size: 38rpx;
  color: #FF9500;
  font-weight: 900;
  letter-spacing: 0.5rpx;
}

.price-per-person {
  font-size: 22rpx;
  color: var(--color-text-secondary);
  font-weight: 600;
}

/* Âä†ËΩΩÂíåÁ©∫Áä∂ÊÄÅ - Friendly */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-state::before {
  content: 'üéØ';
  font-size: 100rpx;
  margin-bottom: 24rpx;
  animation: bounce 1s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
  gap: 24rpx;
}

.empty-state::before {
  content: 'üòä';
  font-size: 120rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  font-weight: 600;
}

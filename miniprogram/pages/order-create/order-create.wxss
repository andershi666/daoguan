/* pages/order-create/order-create.wxss */
.container {
  padding: 24rpx 24rpx 200rpx;
  background: linear-gradient(180deg, #faf8f5 0%, #ffffff 30%, #faf8f5 100%);
  min-height: 100vh;
}

/* 服务信息 */
.service-info {
  margin-bottom: 28rpx;
  background: linear-gradient(135deg, #fff8f0 0%, #ffe8cc 100%);
  padding: 28rpx;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(244, 164, 96, 0.25),
              inset 0 1rpx 2rpx rgba(255, 255, 255, 0.6);
  border: 1rpx solid rgba(139, 69, 19, 0.15);
  position: relative;
  overflow: hidden;
}

.service-info::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg,
    var(--color-primary) 0%,
    var(--color-accent) 100%);
}

.service-name {
  display: block;
  font-size: 38rpx;
  font-weight: 800;
  color: var(--color-primary);
  margin-bottom: 14rpx;
  letter-spacing: 1rpx;
  padding-top: 4rpx;
  line-height: 1.3;
}

.service-desc {
  display: block;
  font-size: 28rpx;
  color: var(--color-text-secondary);
  line-height: 1.6;
  letter-spacing: 0.5rpx;
}

/* 区域标题 */
.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--color-text-primary);
  margin-bottom: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 24rpx;
  border-left: 8rpx solid var(--color-primary);
  letter-spacing: 1rpx;
  line-height: 1.3;
}

.section-title::after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
  background: linear-gradient(180deg,
    var(--color-primary) 0%,
    var(--color-accent) 100%);
}

.add-person-btn {
  font-size: 28rpx;
  color: var(--color-primary);
  font-weight: 600;
  background: linear-gradient(135deg, #fff8f0 0%, #ffe8cc 100%);
  padding: 10rpx 24rpx;
  border-radius: 24rpx;
  border: 1rpx solid rgba(139, 69, 19, 0.25);
  box-shadow: 0 4rpx 12rpx rgba(139, 69, 19, 0.15);
  transition: all 0.3s ease;
  letter-spacing: 0.5rpx;
}

.add-person-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(139, 69, 19, 0.2);
}

/* 人员卡片 */
.persons-section {
  margin-bottom: 28rpx;
}

.person-card {
  background: linear-gradient(135deg, #ffffff 0%, #fefefe 100%);
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06),
              0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(139, 69, 19, 0.06);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.person-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg,
    var(--color-primary) 0%,
    var(--color-accent) 50%,
    var(--color-primary) 100%);
  opacity: 0.6;
}

.person-card::after {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(139, 69, 19, 0.02) 0%, transparent 70%);
  border-radius: 50%;
}

.person-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.04);
  position: relative;
  z-index: 1;
}

.person-number {
  font-size: 32rpx;
  font-weight: 800;
  color: var(--color-primary);
  letter-spacing: 1rpx;
}

.delete-btn {
  font-size: 26rpx;
  color: var(--color-error);
  background: #fff5f5;
  padding: 10rpx 20rpx;
  border-radius: 16rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(255, 77, 79, 0.15);
  transition: all 0.3s ease;
}

.delete-btn:active {
  transform: scale(0.95);
  background: #ffe8e8;
}

/* 表单项 */
.input-item {
  margin-bottom: 32rpx;
  position: relative;
  z-index: 1;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: var(--color-text-primary);
  margin-bottom: 14rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.input-field {
  width: 100%;
  height: 92rpx;
  padding: 0 24rpx;
  border: 2rpx solid var(--color-bg-tertiary);
  border-radius: 16rpx;
  font-size: 30rpx;
  background: var(--color-bg-primary);
  color: var(--color-text-primary);
  box-sizing: border-box;
  line-height: 92rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.input-field:focus {
  border-color: var(--color-primary);
  background: var(--color-bg-primary);
  box-shadow: 0 0 0 6rpx rgba(139, 69, 19, 0.08),
              0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  transform: translateY(-2rpx);
}

.textarea-field {
  width: 100%;
  min-height: 180rpx;
  padding: 20rpx 24rpx;
  border: 2rpx solid var(--color-bg-tertiary);
  border-radius: 16rpx;
  font-size: 30rpx;
  background: var(--color-bg-primary);
  color: var(--color-text-primary);
  box-sizing: border-box;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  line-height: 1.6;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.textarea-field:focus {
  border-color: var(--color-primary);
  box-shadow: 0 0 0 6rpx rgba(139, 69, 19, 0.08),
              0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.picker-display {
  height: 92rpx;
  line-height: 92rpx;
  padding: 0 24rpx;
  border: 2rpx solid var(--color-bg-tertiary);
  border-radius: 16rpx;
  font-size: 30rpx;
  background: var(--color-bg-primary);
  color: var(--color-text-primary);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
  position: relative;
}

.picker-display::after {
  content: '›';
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%) rotate(90deg);
  font-size: 40rpx;
  color: var(--color-text-tertiary);
  transition: all 0.3s ease;
}

.picker-display:active {
  border-color: var(--color-primary);
  background: var(--color-bg-accent);
  transform: scale(0.99);
}

.picker-display:active::after {
  color: var(--color-primary);
}

/* 性别选择 */
.radio-item {
  display: inline-flex;
  align-items: center;
  margin-right: 48rpx;
  padding: 16rpx 28rpx;
  border-radius: 16rpx;
  background: var(--color-bg-secondary);
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.radio-item:active {
  background: var(--color-bg-accent);
  border-color: rgba(139, 69, 19, 0.15);
}

.radio-item text {
  margin-left: 12rpx;
  font-size: 30rpx;
  color: var(--color-text-primary);
  font-weight: 500;
}

/* 时辰选择器 */
.shichen-picker {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 560rpx;
  background: linear-gradient(to top, #ffffff 0%, #fefefe 100%);
  z-index: 9999;
  border-radius: 40rpx 40rpx 0 0;
  box-shadow: 0 -16rpx 48rpx rgba(0, 0, 0, 0.15),
              0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  animation: slideUp 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  font-size: 30rpx;
  color: var(--color-text-primary);
  transition: all 0.3s ease;
}

.picker-item:active {
  background: var(--color-bg-accent);
}

/* 底部订单栏 */
.order-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top,
    rgba(255, 255, 255, 1) 0%,
    rgba(255, 255, 255, 0.98) 100%);
  padding: 28rpx 24rpx;
  padding-bottom: calc(28rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -12rpx 32rpx rgba(0, 0, 0, 0.08),
              0 -4rpx 12rpx rgba(0, 0, 0, 0.04);
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.04);
}

.price-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.total-label {
  font-size: 26rpx;
  color: var(--color-text-tertiary);
  font-weight: 500;
}

.total-amount {
  font-size: 52rpx;
  color: #D2691E;
  font-weight: 800;
  text-shadow: 0 2rpx 6rpx rgba(210, 105, 30, 0.25);
  letter-spacing: 1rpx;
  line-height: 1;
}

.submit-btn {
  background: linear-gradient(135deg,
    var(--color-primary) 0%,
    var(--color-accent) 100%);
  color: white;
  border-radius: 56rpx;
  padding: 28rpx 64rpx;
  font-size: 32rpx;
  border: none;
  font-weight: 800;
  letter-spacing: 6rpx;
  box-shadow: 0 8rpx 20rpx rgba(139, 69, 19, 0.35),
              0 4rpx 12rpx rgba(139, 69, 19, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  min-width: 240rpx;
}

.submit-btn::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg,
    rgba(255, 255, 255, 0.2) 0%,
    transparent 50%,
    rgba(255, 255, 255, 0.1) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.submit-btn:active {
  background: linear-gradient(135deg,
    var(--color-primary-dark) 0%,
    var(--color-primary) 100%);
  transform: scale(0.96);
  box-shadow: 0 6rpx 16rpx rgba(139, 69, 19, 0.4),
              0 2rpx 8rpx rgba(139, 69, 19, 0.25);
}

.submit-btn:active::before {
  opacity: 1;
}

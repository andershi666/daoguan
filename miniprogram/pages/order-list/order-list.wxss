/* pages/order-list/order-list.wxss */
.container {
  padding: 24rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #faf8f5 0%, #ffffff 30%, #faf8f5 100%);
  padding-bottom: 120rpx;
}

.order-card {
  background: linear-gradient(135deg, #ffffff 0%, #fefefe 100%);
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06),
              0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(139, 69, 19, 0.06);
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.order-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg,
    var(--color-primary) 0%,
    var(--color-accent) 50%,
    var(--color-primary) 100%);
  opacity: 0.6;
}

.order-card::after {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(139, 69, 19, 0.02) 0%, transparent 70%);
  border-radius: 50%;
}

.order-card:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08),
              0 1rpx 4rpx rgba(0, 0, 0, 0.06);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.04);
  position: relative;
  z-index: 1;
}

.order-no {
  font-size: 26rpx;
  color: var(--color-text-tertiary);
  font-weight: 500;
}

.order-status {
  font-size: 26rpx;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.status-pending {
  background: linear-gradient(135deg, #fffbe6 0%, #fff7cc 100%);
  color: var(--color-warning);
  border: 1rpx solid rgba(250, 173, 20, 0.2);
  box-shadow: 0 2rpx 8rpx rgba(250, 173, 20, 0.15);
}

.status-paid {
  background: linear-gradient(135deg, #f6ffed 0%, #e8ffcc 100%);
  color: var(--color-success);
  border: 1rpx solid rgba(82, 196, 26, 0.2);
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.15);
}

.status-processing {
  background: linear-gradient(135deg, #e6f7ff 0%, #cceeff 100%);
  color: var(--color-info);
  border: 1rpx solid rgba(24, 144, 255, 0.2);
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.15);
}

.status-completed {
  background: linear-gradient(135deg, #f9f0ff 0%, #efdbff 100%);
  color: #722ed1;
  border: 1rpx solid rgba(114, 46, 209, 0.2);
  box-shadow: 0 2rpx 8rpx rgba(114, 46, 209, 0.15);
}

.status-cancelled {
  background: linear-gradient(135deg, #fff1f0 0%, #ffe8e8 100%);
  color: var(--color-error);
  border: 1rpx solid rgba(255, 77, 79, 0.2);
  box-shadow: 0 2rpx 8rpx rgba(255, 77, 79, 0.15);
}

.order-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
}

.service-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
  background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  object-fit: cover;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
}

.order-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  overflow: hidden;
}

.service-name {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--color-text-primary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 0.5rpx;
}

.order-detail-text {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  font-weight: 500;
}

.order-time {
  font-size: 24rpx;
  color: var(--color-text-tertiary);
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 2rpx solid rgba(0, 0, 0, 0.04);
  position: relative;
  z-index: 1;
}

.order-amount {
  font-size: 40rpx;
  color: #D2691E;
  font-weight: 800;
  text-shadow: 0 2rpx 4rpx rgba(210, 105, 30, 0.2);
  letter-spacing: 1rpx;
}

.pay-btn {
  background: linear-gradient(135deg,
    var(--color-primary) 0%,
    var(--color-accent) 100%);
  color: white;
  border-radius: 40rpx;
  padding: 16rpx 44rpx;
  font-size: 28rpx;
  border: none;
  font-weight: 700;
  letter-spacing: 2rpx;
  box-shadow: 0 6rpx 16rpx rgba(139, 69, 19, 0.3);
  transition: all 0.3s ease;
  min-width: 180rpx;
}

.pay-btn:active {
  background: linear-gradient(135deg,
    var(--color-primary-dark) 0%,
    var(--color-primary) 100%);
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(139, 69, 19, 0.35);
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 200rpx 0;
  color: var(--color-text-tertiary);
  font-size: 30rpx;
}

.loading-state::before {
  content: '';
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid var(--color-bg-tertiary);
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

.empty-state {
  text-align: center;
  padding: 160rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

.empty-state::before {
  content: 'üìù';
  font-size: 120rpx;
  opacity: 0.3;
  filter: grayscale(60%);
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: var(--color-text-tertiary);
  font-weight: 500;
}

.go-home-btn {
  display: inline-block;
  background: linear-gradient(135deg,
    var(--color-primary) 0%,
    var(--color-accent) 100%);
  color: white;
  padding: 24rpx 56rpx;
  border-radius: 48rpx;
  font-size: 30rpx;
  font-weight: 700;
  letter-spacing: 4rpx;
  box-shadow: 0 8rpx 20rpx rgba(139, 69, 19, 0.3);
  transition: all 0.3s ease;
}

.go-home-btn:active {
  background: linear-gradient(135deg,
    var(--color-primary-dark) 0%,
    var(--color-primary) 100%);
  transform: scale(0.96);
  box-shadow: 0 6rpx 16rpx rgba(139, 69, 19, 0.35);
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

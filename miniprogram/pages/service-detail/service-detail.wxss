/* pages/service-detail/service-detail.wxss - Duolingo Style */
.container {
  padding: 0 0 200rpx;
  background: linear-gradient(180deg, #FFF9F0 0%, #FFFFFF 100%);
  min-height: 100vh;
}

.service-banner {
  width: 100%;
  height: 440rpx;
  background: linear-gradient(135deg, #F5F5F5 0%, #E8E8E8 100%);
  object-fit: cover;
}

.service-detail {
  margin: -40rpx 20rpx 20rpx;
  background: white;
  border-radius: 28rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.12);
  border: 3rpx solid #F0F0F0;
  position: relative;
  z-index: 1;
}

.service-name {
  display: block;
  font-size: 40rpx;
  font-weight: 800;
  color: var(--color-text-primary);
  margin-bottom: 24rpx;
  letter-spacing: 0.3rpx;
  line-height: 1.3;
}

.price-section {
  display: flex;
  gap: 16rpx;
}

.price-item {
  flex: 1;
  background: #FFE588;
  padding: 24rpx 20rpx;
  border-radius: 20rpx;
  text-align: center;
  border: 3rpx solid #FFD93D;
  border-bottom-width: 6rpx;
  transition: all 0.25s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.price-item:active {
  transform: translateY(3rpx);
  border-bottom-width: 3rpx;
}

.price-label {
  display: block;
  font-size: 24rpx;
  color: #E67E00;
  margin-bottom: 12rpx;
  font-weight: 700;
  letter-spacing: 0.3rpx;
}

.price-value {
  display: block;
  font-size: 44rpx;
  color: #FF9500;
  font-weight: 900;
  letter-spacing: 0.5rpx;
}

.card {
  background: white;
  margin: 20rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 3rpx solid #F0F0F0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 800;
  color: var(--color-text-primary);
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 3rpx solid #FFE588;
  letter-spacing: 0.3rpx;
}

.service-description {
  display: block;
  font-size: 28rpx;
  color: var(--color-text-secondary);
  line-height: 1.8;
  text-align: justify;
  letter-spacing: 0.3rpx;
  font-weight: 500;
}

.tips {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  line-height: 1.7;
  padding: 16rpx 20rpx 16rpx 52rpx;
  position: relative;
  background: #F7F7F7;
  border-radius: 16rpx;
  font-weight: 500;
  border: 2rpx solid #E5E5E5;
}

.tip-item::before {
  content: 'âœ“';
  position: absolute;
  left: 16rpx;
  top: 16rpx;
  color: #58CC02;
  font-weight: 900;
  font-size: 28rpx;
  width: 28rpx;
  height: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top,
    rgba(255, 255, 255, 1) 0%,
    rgba(255, 255, 255, 0.98) 100%);
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -12rpx 32rpx rgba(0, 0, 0, 0.08),
              0 -4rpx 12rpx rgba(0, 0, 0, 0.04);
  z-index: 100;
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.04);
}

.book-btn {
  width: 100%;
  background: linear-gradient(135deg,
    var(--color-primary) 0%,
    var(--color-accent) 50%,
    var(--color-primary) 100%);
  color: white;
  border-radius: 56rpx;
  padding: 28rpx;
  font-size: 32rpx;
  border: none;
  line-height: 1;
  font-weight: 800;
  letter-spacing: 6rpx;
  box-shadow: 0 8rpx 20rpx rgba(139, 69, 19, 0.35),
              0 4rpx 12rpx rgba(139, 69, 19, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.book-btn::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg,
    rgba(255, 255, 255, 0.2) 0%,
    transparent 50%,
    rgba(255, 255, 255, 0.1) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.book-btn::after {
  border: none;
}

.book-btn:active {
  background: linear-gradient(135deg,
    var(--color-primary-dark) 0%,
    var(--color-primary-light) 50%,
    var(--color-primary-dark) 100%);
  transform: scale(0.96);
  box-shadow: 0 6rpx 16rpx rgba(139, 69, 19, 0.4),
              0 2rpx 8rpx rgba(139, 69, 19, 0.25);
}

.book-btn:active::before {
  opacity: 1;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 0;
}

.loading-state::before {
  content: 'ðŸŽ¯';
  font-size: 100rpx;
  margin-bottom: 24rpx;
  animation: bounce 1s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

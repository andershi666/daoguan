<!--pages/contact/contact.wxml-->
<view class="container">
  <!-- 客服信息卡片 -->
  <view class="service-card">
    <view class="service-header">
      <image class="service-avatar" src="/images/service-avatar.png" mode="aspectFill"></image>
      <view class="service-info">
        <text class="service-name">道观客服</text>
        <text class="service-status">在线服务</text>
      </view>
    </view>

    <view class="service-desc">
      <text class="desc-title">服务时间</text>
      <text class="desc-content">每日 9:00 - 18:00</text>
    </view>

    <view class="wechat-section">
      <view class="wechat-info">
        <text class="wechat-label">微信号</text>
        <text class="wechat-id">{{wechatId}}</text>
      </view>
      <button class="copy-btn" bindtap="copyWechat">复制微信号</button>
    </view>
  </view>

  <!-- 常见问题 -->
  <view class="faq-section">
    <view class="section-header">
      <text class="section-title">常见问题</text>
    </view>

    <view class="faq-list">
      <view class="faq-item" wx:for="{{faqList}}" wx:key="id">
        <view class="faq-question" bindtap="toggleFaq" data-id="{{item.id}}">
          <text class="question-text">{{item.question}}</text>
          <text class="arrow-icon">{{item.expanded ? '∧' : '∨'}}</text>
        </view>
        <view class="faq-answer" wx:if="{{item.expanded}}">
          <text class="answer-text">{{item.answer}}</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 联系方式提示 -->
  <view class="tips-section">
    <text class="tips-text">添加微信客服，获取更快速的服务响应</text>
  </view>
</view>

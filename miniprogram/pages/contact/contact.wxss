/* pages/contact/contact.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #faf8f5 0%, #ffffff 30%, #faf8f5 100%);
  padding: 24rpx;
}

/* 客服信息卡片 */
.service-card {
  background: linear-gradient(135deg, #ffffff 0%, #fefefe 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06),
              0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.service-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 32rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.04);
}

.service-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.service-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.service-name {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--color-text-primary);
  letter-spacing: 1rpx;
}

.service-status {
  font-size: 26rpx;
  color: #52c41a;
  font-weight: 600;
}

.service-desc {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #fff8f0 0%, #ffe8cc 100%);
  border-radius: 16rpx;
}

.desc-title {
  display: block;
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-bottom: 8rpx;
  font-weight: 600;
}

.desc-content {
  display: block;
  font-size: 30rpx;
  color: var(--color-primary);
  font-weight: 700;
  letter-spacing: 1rpx;
}

/* 微信号部分 */
.wechat-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
}

.wechat-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.wechat-label {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  font-weight: 600;
}

.wechat-id {
  font-size: 34rpx;
  color: var(--color-text-primary);
  font-weight: 800;
  font-family: -apple-system-monospace, monospace;
  letter-spacing: 2rpx;
}

.copy-btn {
  background: linear-gradient(135deg,
    var(--color-primary) 0%,
    var(--color-accent) 100%);
  color: white;
  border-radius: 56rpx;
  padding: 24rpx 36rpx;
  font-size: 28rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 69, 19, 0.25);
  border: none;
  transition: all 0.3s ease;
}

.copy-btn::after {
  border: none;
}

.copy-btn:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(139, 69, 19, 0.3);
}

/* 常见问题 */
.faq-section {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--color-text-primary);
  letter-spacing: 1rpx;
}

.faq-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.faq-item {
  border-radius: 16rpx;
  overflow: hidden;
  background: #fafafa;
}

.faq-question {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  cursor: pointer;
  transition: background 0.3s ease;
}

.faq-question:active {
  background: #f0f0f0;
}

.question-text {
  flex: 1;
  font-size: 30rpx;
  color: var(--color-text-primary);
  font-weight: 600;
  line-height: 1.5;
}

.arrow-icon {
  font-size: 24rpx;
  color: var(--color-text-tertiary);
  margin-left: 16rpx;
  transition: transform 0.3s ease;
}

.faq-answer {
  padding: 0 24rpx 24rpx;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.answer-text {
  display: block;
  font-size: 28rpx;
  color: var(--color-text-secondary);
  line-height: 1.8;
  padding: 20rpx;
  background: white;
  border-radius: 12rpx;
}

/* 提示文字 */
.tips-section {
  text-align: center;
  padding: 32rpx 24rpx;
}

.tips-text {
  font-size: 26rpx;
  color: var(--color-text-tertiary);
  line-height: 1.6;
}

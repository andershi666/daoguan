/* pages/order-detail/order-detail.wxss */
.container {
  padding: 24rpx 24rpx 200rpx;
  background: linear-gradient(180deg, #faf8f5 0%, #ffffff 30%, #faf8f5 100%);
  min-height: 100vh;
}

/* 状态卡片 */
.status-card {
  background: linear-gradient(135deg,
    var(--color-primary) 0%,
    var(--color-accent) 50%,
    var(--color-accent-light) 100%);
  border-radius: 28rpx;
  padding: 52rpx 40rpx;
  text-align: center;
  color: white;
  margin-bottom: 28rpx;
  box-shadow: 0 12rpx 32rpx rgba(139, 69, 19, 0.35),
              0 4rpx 12rpx rgba(139, 69, 19, 0.2);
  position: relative;
  overflow: hidden;
}

.status-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -10%;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.15) 0%, transparent 70%);
  border-radius: 50%;
  animation: float 6s ease-in-out infinite;
}

.status-card::after {
  content: '';
  position: absolute;
  bottom: -40%;
  left: -10%;
  width: 240rpx;
  height: 240rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  border-radius: 50%;
  animation: float 8s ease-in-out infinite reverse;
}

@keyframes float {
  0%, 100% { transform: translateY(0) scale(1); }
  50% { transform: translateY(-20rpx) scale(1.05); }
}

.status-text {
  display: block;
  font-size: 52rpx;
  font-weight: 800;
  margin-bottom: 24rpx;
  letter-spacing: 6rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.25);
  position: relative;
  z-index: 1;
}

.order-no {
  display: block;
  font-size: 26rpx;
  opacity: 0.95;
  margin-bottom: 12rpx;
  font-family: -apple-system-monospace, monospace;
  position: relative;
  z-index: 1;
  letter-spacing: 1rpx;
}

.order-time {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
  position: relative;
  z-index: 1;
}

/* 卡片 */
.card {
  background: linear-gradient(135deg, #ffffff 0%, #fefefe 100%);
  border-radius: 24rpx;
  padding: 36rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06),
              0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(139, 69, 19, 0.06);
  position: relative;
  overflow: hidden;
}

.card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(139, 69, 19, 0.02) 0%, transparent 70%);
  border-radius: 50%;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--color-text-primary);
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.04);
  letter-spacing: 1rpx;
  position: relative;
  z-index: 1;
}

/* 服务信息 */
.service-row {
  display: flex;
  gap: 24rpx;
  position: relative;
  z-index: 1;
}

.service-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
  background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  object-fit: cover;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
}

.service-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 12rpx;
}

.service-name {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--color-text-primary);
  letter-spacing: 0.5rpx;
  line-height: 1.3;
}

.service-desc {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  line-height: 1.6;
}

/* 人员信息 */
.person-item {
  background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(139, 69, 19, 0.08);
  position: relative;
  overflow: hidden;
}

.person-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg,
    var(--color-primary) 0%,
    var(--color-accent) 100%);
  opacity: 0.5;
}

.person-item:last-child {
  margin-bottom: 0;
}

.person-header {
  margin-bottom: 28rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.04);
}

.person-number {
  font-size: 32rpx;
  font-weight: 800;
  color: var(--color-primary);
  letter-spacing: 1rpx;
}

.info-row {
  display: flex;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  min-width: 160rpx;
  flex-shrink: 0;
  font-weight: 600;
}

.info-value {
  font-size: 28rpx;
  color: var(--color-text-primary);
  flex: 1;
  word-wrap: break-word;
  word-break: break-all;
  font-weight: 500;
}

.bazi-row {
  background: linear-gradient(135deg, #fff8f0 0%, #ffe8cc 100%);
  padding: 24rpx;
  border-radius: 16rpx;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(244, 164, 96, 0.25),
              inset 0 1rpx 2rpx rgba(255, 255, 255, 0.5);
  border: 1rpx solid rgba(139, 69, 19, 0.15);
}

.bazi-text {
  font-weight: 800;
  color: var(--color-primary);
  letter-spacing: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(139, 69, 19, 0.15);
  font-size: 30rpx;
}

/* 费用明细 */
.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 12rpx 0;
  position: relative;
  z-index: 1;
}

.price-row:last-child {
  margin-bottom: 0;
}

.price-label {
  font-size: 30rpx;
  color: var(--color-text-secondary);
  font-weight: 600;
}

.price-value {
  font-size: 34rpx;
  color: var(--color-text-primary);
  font-weight: 600;
}

.total-row {
  padding-top: 28rpx;
  border-top: 2rpx solid rgba(0, 0, 0, 0.06);
  margin-top: 20rpx;
}

.total-price {
  font-size: 52rpx;
  color: #D2691E;
  font-weight: 800;
  text-shadow: 0 2rpx 6rpx rgba(210, 105, 30, 0.25);
  letter-spacing: 1rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top,
    rgba(255, 255, 255, 1) 0%,
    rgba(255, 255, 255, 0.98) 100%);
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -12rpx 32rpx rgba(0, 0, 0, 0.08),
              0 -4rpx 12rpx rgba(0, 0, 0, 0.04);
  display: flex;
  gap: 24rpx;
  z-index: 1000;
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.04);
}

/* 取消订单按钮 */
.cancel-btn {
  flex: 1;
  background: white;
  color: #666;
  border: 2rpx solid #ddd;
  border-radius: 56rpx;
  padding: 28rpx;
  font-size: 30rpx;
  line-height: 1;
  font-weight: 700;
  letter-spacing: 2rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.cancel-btn::after {
  border: none;
}

.cancel-btn:active {
  background: #f5f5f5;
  color: #333;
  border-color: #ccc;
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 立即支付按钮 */
.pay-btn {
  flex: 2;
  background: linear-gradient(135deg,
    var(--color-primary) 0%,
    var(--color-accent) 50%,
    var(--color-primary) 100%);
  color: white;
  border-radius: 56rpx;
  padding: 28rpx;
  font-size: 32rpx;
  border: none;
  line-height: 1;
  font-weight: 800;
  letter-spacing: 6rpx;
  box-shadow: 0 8rpx 20rpx rgba(139, 69, 19, 0.35),
              0 4rpx 12rpx rgba(139, 69, 19, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.pay-btn::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg,
    rgba(255, 255, 255, 0.2) 0%,
    transparent 50%,
    rgba(255, 255, 255, 0.1) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.pay-btn::after {
  border: none;
}

.pay-btn:active {
  background: linear-gradient(135deg,
    var(--color-primary-dark) 0%,
    var(--color-primary-light) 50%,
    var(--color-primary-dark) 100%);
  transform: scale(0.96);
  box-shadow: 0 6rpx 16rpx rgba(139, 69, 19, 0.4),
              0 2rpx 8rpx rgba(139, 69, 19, 0.25);
}

.pay-btn:active::before {
  opacity: 1;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 200rpx 0;
  color: var(--color-text-tertiary);
  font-size: 30rpx;
}

.loading-state::before {
  content: '';
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid var(--color-bg-tertiary);
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}
